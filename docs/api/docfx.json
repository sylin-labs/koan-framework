{
  "metadata": [
    {
      "src": [
        { "src": "../../src", "files": ["**/*.csproj"], "exclude": ["**/bin/**", "**/obj/**"] }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net9.0"
      }
    }
  ],
  "build": {
    "content": [
      { "files": ["api/**.yml", "api/index.md"] },
      { "files": ["toc.yml", "assemblies.md", "web-http-api.md", "well-known-endpoints.md", "openapi-generation.md"] },
      { "files": ["**/*.md"], "exclude": ["bin/**", "obj/**", "node_modules/**"] }
    ],
    "resource": [
      { "files": ["**/images/**"] },
      { "src": ".", "files": ["styles/**"] }
    ],
  "dest": "../../resources/website/docs",
    "globalMetadata": {
      "_appTitle": "Sora Framework API"
    },
    "xref": [],
    "template": ["default"],
    "styles": [ "styles/site.css" ]
  }
}
