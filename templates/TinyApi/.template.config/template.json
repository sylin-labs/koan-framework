{
  "$schema": "http://json.schemastore.org/template",
  "author": "Sylin Labs",
  "classifications": ["Sora", "Web", "API", "Tiny"],
  "identity": "Sylin.Sora.TinyApi",
  "name": "Sora TinyApi (JSON file storage)",
  "shortName": "sora-tiny-api",
  "sourceName": "TinyApi",
  "preferNameDirectory": true,
  "tags": { "language": "C#", "type": "project" },
  "symbols": {
    "port": {
      "type": "parameter",
      "datatype": "integer",
      "defaultValue": "6055",
      "replaces": "__PORT__",
      "description": "HTTP port (default 6055; falls back if busy)"
    }
  },
  "primaryOutputs": [
    { "path": "TinyApi.csproj" }
  ]
}
