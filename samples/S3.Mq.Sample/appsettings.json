{
  "Koan": {
    "AllowMagicInProduction": false,
    "Messaging": {
      "DefaultBus": "rabbit",
      "Buses": {
        "rabbit": {
          "Provider": "RabbitMq",
          "ConnectionStringName": "rabbitmq",
          "RabbitMq": {
            "Exchange": "Koan",
            "ExchangeType": "topic",
            "PublisherConfirms": true
          },
          "Prefetch": 50,
          "Retry": { "MaxAttempts": 5, "Backoff": "exponential", "FirstDelaySeconds": 3 },
          "Dlq": { "Enabled": true },
          "ProvisionOnStart": true
        }
      }
    }
  },
  "ConnectionStrings": {
    "rabbitmq": "amqp://guest:guest@rabbitmq:5672"
  }
}
