{
  "Koan": {
    "Data": {
      "Json": {
        "DirectoryPath": "./data"
      }
    },
    "Flow": {
      "BatchSize": 50,
      "PurgeEnabled": true,
      "PurgeInterval": "00:30:00",
      "IntakeTtl": "7.00:00:00",
      "StandardizedTtl": "14.00:00:00", 
      "KeyedTtl": "30.00:00:00",
      "ProjectionTaskTtl": "1.00:00:00",
      "RejectionReportTtl": "7.00:00:00",
      "Materialization": {
        "DefaultPolicy": "last",
        "PerModelDefaults": {
          "S8.Flow.Shared.Device": "coalesce",
          "S8.Flow.Shared.Sensor": "coalesce"
        },
        "PerPath": {
          "S8.Flow.Shared.Device:device.identifier.serial": "first",
          "S8.Flow.Shared.Sensor:sensor.unit": "first"
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Koan.Flow": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
