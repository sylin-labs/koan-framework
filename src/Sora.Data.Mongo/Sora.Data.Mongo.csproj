    <LangVersion>preview</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  <Description>MongoDB data provider for Sora: options binding and repository integration for document databases.</Description>
  <PackageTags>$(CommonPackageTags);data;mongodb;documentdb;repository</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Sora.Data.Abstractions\Sora.Data.Abstractions.csproj" />
    <ProjectReference Include="..\Sora.Data.Core\Sora.Data.Core.csproj" />
    <ProjectReference Include="..\Sora.Core\Sora.Core.csproj" />
  <ProjectReference Include="..\Sora.Orchestration.Abstractions\Sora.Orchestration.Abstractions.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="MongoDB.Driver" Version="2.25.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Options.DataAnnotations" Version="9.0.8" />
  </ItemGroup>
</Project>
