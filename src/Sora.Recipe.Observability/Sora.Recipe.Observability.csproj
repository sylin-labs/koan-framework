    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <IsPackable>true</IsPackable>
    <Description>Observability baseline recipe (health checks + OTEL + resilient HttpClient).</Description>
    <PackageTags>$(CommonPackageTags);recipes;observability;health;opentelemetry</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Sora.Recipe.Abstractions\Sora.Recipe.Abstractions.csproj" />
    <ProjectReference Include="..\Sora.Web\Sora.Web.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http.Resilience" Version="9.1.0" />
  </ItemGroup>
</Project>
