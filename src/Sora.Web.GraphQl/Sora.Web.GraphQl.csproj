<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Sora.Web.GraphQl</PackageId>
    <AssemblyName>Sora.Web.GraphQl</AssemblyName>
    <RootNamespace>Sora.Web.GraphQl</RootNamespace>
    <Description>Sora GraphQL module providing a controller-hosted GraphQL endpoint and schema for IEntity&lt;&gt; types.</Description>
    <PackageTags>sora;framework;web;graphql;hotchocolate;controllers</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HotChocolate.AspNetCore" Version="13.8.1" />
    <PackageReference Include="HotChocolate.Execution" Version="13.8.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Sora.Web\Sora.Web.csproj" />
    <ProjectReference Include="..\Sora.Data.Core\Sora.Data.Core.csproj" />
    <ProjectReference Include="..\Sora.Core\Sora.Core.csproj" />
  </ItemGroup>
</Project>
